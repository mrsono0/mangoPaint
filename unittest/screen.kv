ScreenManager:
    MenuScreen:
    FirstScreen:
    SecondScreen:
    ThirdScreen:
    FourthScreen:
<MenuScreen>:
    Button:
        text: 'start'
        on_press: app.root.current = 'first_screen'
<FirstScreen>:
    first_screen: first_screen
    name: 'first_screen'
    on_enter: root.starttimer()
    Label:
        id: first_screen
        text: "Hi I'm The First Screen"
<SecondScreen>:
    name: 'second_screen'
