#:import MDToolbar kivymd.toolbar.MDToolbar
#:import SmartTileWithLabel kivymd.imagelists.SmartTileWithLabel
#:import SmartTileWithStar kivymd.imagelists.SmartTileWithStar
#:import MDBottomNavigation kivymd.tabs.MDBottomNavigation


<MySmartTileWithLabel@SmartTileWithLabel>:
    mipmap: True
    font_style: 'Subhead'


<Gallery>:
    name: 'gallery'

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10), dp(10)
        spacing: dp(10)

        Label:
            size_hint: None, None
            height: dp(10)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '18sp'
            text: app.translation._('Directory..')

        # MDSeparator:

        Image:
            source: 'Screens/resources/imgs/mango.jpg'
            allow_stretch: True


        ScrollView:

            Label:
                id: text_license
                font_size: '13sp'
                text_size: self.width, None
                size_hint_y: None
                markup: True
                height: self.texture_size[1]

