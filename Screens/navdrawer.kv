#:import os os
#:import ModifiedNavigationDrawer Programs.navigationdrawer.ModifiedNavigationDrawer
#:import SingleIconItem Programs.lists.SingleIconItem


<LabelSection@Label>:
    markup: True
    bold: True
    font_size: '16sp'
    color: 0, 0, 0, 1
    size_hint_y: None
    height: dp(45)

<NavDrawer>:
    _app: app
    on_state: root.add_name_previous_screen()
    side_panel_width:
        (self.side_panel_width * 80) // 100 \
        if self.side_panel_width >= app.window.width \
        else self.side_panel_width

    ModifiedNavigationDrawer:
        id: nav_drawer

        BoxLayout:
            id: box_avatar
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            size_hint_y: .3

            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'Screens/resources/icons/logo.png'

            Image:
                id: navigation_image
                size_hint: None, None
                size: dp((box_avatar.height * 30) // 100), dp((box_avatar.height * 30) // 100)
                source: 'Screens/resources/icons/logo.png'

            Widget:

            Label:
                id: user_name
                size_hint: None, None
                height: dp(20)
                width: self.texture_size[0]
                halign: 'left'
                text: '[b]%s[/b]\n[size=12]VERSION_PROJECT[/size]\n' % app.title
                markup: True
                font_size: '14sp'

        ScrollView:
            id: scroll
            size_hint_y: .7

            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)

                LabelSection:
                    text: 'aaa'
                    # text:  app.translation._('Меню:')
                    events_callback: lambda x: x

                SingleIconItem:
                    icon: 'web'
                    text: 'bbb'
                    # text: app.translation._('Язык')
                    events_callback: app.select_locale

                SingleIconItem:
                    icon: 'language-python'
                    text: 'ccc'
                    # text: app.translation._('Лицензия')
                    events_callback: app.show_license

                SingleIconItem:
                    icon: 'information'
                    text: 'About'
                    events_callback: app.show_about