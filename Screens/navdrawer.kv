#: kivy 1.10.1
#:import os os
#:import ModifiedNavigationDrawer Libs.navigationdrawer.ModifiedNavigationDrawer
#:import SingleIconItem Libs.lists.SingleIconItem


<LabelSection@Label>:
    markup: True
    bold: True
    font_size: '16sp'
    color: 0, 0, 0, 1
    size_hint_y: None
    height: dp(45)

<NavDrawer>:
    _app: app
    on_state: root.add_name_previous_screen()
    side_panel_width:
        (self.side_panel_width * 80) // 100 \
        if self.side_panel_width >= app.window.width \
        else self.side_panel_width

    ModifiedNavigationDrawer:
        id: nav_drawer

        BoxLayout:
            id: box_avatar
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            size_hint_y: .3

            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'Screens/resources/imgs/mango.jpg'

            Image:
                id: navigation_image
                size_hint: None, None
                size: dp((box_avatar.height * 30) // 100), dp((box_avatar.height * 30) // 100)
                source: 'Screens/resources/imgs/mango.jpg'

            Widget:

            Label:
                id: user_name
                size_hint: None, None
                height: dp(20)
                width: self.texture_size[0]
                halign: 'left'
                text: '[b]%s[/b]\n[size=12]VERSION_PROJECT[/size]\n' % app.title
                markup: True
                font_size: '14sp'

        ScrollView:
            id: scroll
            size_hint_y: .7

            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)

                LabelSection:
                    text:  app.translation._('Menu:')  # 매뉴:
                    events_callback: lambda x: x

                SingleIconItem:
                    icon: 'camera-party-mode'   
                    text: app.translation._('gallery')  # 갤러리  
                    events_callback: app.show_gallery

                SingleIconItem:
                    icon: 'palette'
                    text: app.translation._('mystudio')  # 내 스튜디오 
                    events_callback: app.show_mystudio

                SingleIconItem:
                    icon: 'cart'
                    text: app.translation._('purchase')  # 구매  
                    events_callback: app.show_purchase

                SingleIconItem:
                    icon: 'web'
                    text: app.translation._('language')  # 언어 
                    events_callback: app.select_locale

                SingleIconItem:
                    icon: 'language-python'
                    text: app.translation._('License')   # 라이센스 
                    events_callback: app.show_license

                SingleIconItem:
                    icon: 'information'
                    text: 'About'
                    events_callback: app.show_about