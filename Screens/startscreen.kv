
#:import MDToolbar kivymd.toolbar.MDToolbar
#:import License Programs.license.License
#:import NavDrawer Programs.navdrawer.NavDrawer
#:import BaseScreen Programs.basescreen.BaseScreen
#:import About Programs.about.About

<StartScreen>
    orientation: 'vertical'

    NavDrawer:
        id: nav_drawer

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(5)

            MDToolbar:
                id: mdtool_bar
                background_color: app.theme_cls.primary_color
                title: app.title
                left_action_items: [['menu', lambda x: nav_drawer._toggle()]]
                elevation: 10
                md_bg_color: app.theme_cls.primary_color

            ScreenManager:
                id: manager

                BaseScreen:
                    id: base

                Gallery:
                    id: gallery

                MyStudio:
                    id: mystudio

                Purchase:
                    id: purchase

                Community:
                    id: community

                License:
                    id: license

                About:
                    id: about
