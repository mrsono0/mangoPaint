                MyStudio:  # 내작업공간
                    id: mystudio
                    # on_enter: self._on_enter(mdtool_bar, app)
                    #on_leave: mdtool_bar.title = app.sets.string_lang_create_account                    

                Community:  # 회원들 작업공간
                    id: community
                    # on_enter: self._on_enter(mdtool_bar, app)
                    #on_leave:                    

                Purchase:  # 구매신청
                    id: purchase
                    # on_enter: self._on_enter(mdtool_bar, app)
                    #on_leave: 
                    #    mdtool_bar.title = app.title; mdtool_bar.left_action_items = []                 

                Effects:  # 사진 편집
                    id: effects
