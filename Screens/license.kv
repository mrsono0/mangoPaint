<License>:
    name: 'license'

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10), dp(10)
        spacing: dp(10)

        Label:
            size_hint: None, None
            height: dp(20)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '18sp'
            text:
                # 'zzz'
            text: app.translation._('MIT LICENSE')

        # MDSeparator:

        Image:
            source: 'Screens/resources/icons/logo.png'

        ScrollView:

            Label:
                id: text_license
                font_size: '13sp'
                text_size: self.width, None
                size_hint_y: None
                markup: True
                height: self.texture_size[1]